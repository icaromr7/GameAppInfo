<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/game_details_background">

    <EditText
        android:id="@+id/etGameName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do jogo"
        android:background="@drawable/input_background"
        android:enabled="false"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etGameDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição do jogo"
        android:background="@drawable/input_background"
        android:enabled="false"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etGameRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_background"
        android:hint="Avaliação"
        android:enabled="false"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_screen_button_background"
        android:text="Editar"/>

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_screen_button_background"
        android:text="Deletar"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_screen_button_background"
        android:text="Voltar"
        android:layout_marginTop="8dp"/>

</LinearLayout>
